<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Add Devices"
        android:id="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Enter Real power and Apparent power of the appliances."
        android:id="@+id/textView5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/current_1_container"
            android:layout_width="0dp"
            android:layout_weight="1"

            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/current_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Real Power" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/reactive_1_container"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/reactive_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Apparent Power" />

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/current_2_container"
            android:layout_width="0dp"
            android:layout_weight="1"

            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/current_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Real Power" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/reactive_2_container"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/reactive_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Apparent Power" />

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/current_3_container"
            android:layout_width="0dp"
            android:layout_weight="1"

            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/current_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Real Power" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/reactive_3_container"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/reactive_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Apparent Power" />

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/current_4_container"
            android:layout_width="0dp"
            android:layout_weight="1"

            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/current_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Real Power" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/reactive_4_container"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/reactive_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Apparent Power" />

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/current_5_container"
            android:layout_width="0dp"
            android:layout_weight="1"

            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/current_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Real Power" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/reactive_5_container"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/reactive_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Apparent Power" />

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/line"
        android:layout_marginTop="10dp"
        style="?android:attr/listSeparatorTextViewStyle"
        android:paddingTop="5dip"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total:"
        android:id="@+id/textView6" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Total Real Power"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Total Apparent Power"/>
    </LinearLayout>


</LinearLayout>